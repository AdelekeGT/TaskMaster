{
    "version": 2,
    "builds": [
        {
            "src": "server/src/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["server/src/**/*"],
                "excludeFiles": ["node_modules"],
                "typescript": true
            }
        },
        {
            "src": "client/build/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/dist/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/build/$1"
        }
    ]
}
